---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <video autoplay muted loop id="video">
    <source src="/src/assets/background-header/background.mp4" type="video/mp4">
  </video>

  <div class="video-veil"></div>

  <section id="hero">
    <img src="/src/assets/icon-temu/Sticky.png" alt="TEMU.icon">
    <a href="#news"><img src="/src/assets/icon-navbar/Vector.png" alt=""></a>
  </section>
  <section id="news">
    <div class="card1">
      <img src="/src/assets/news-image/card1.png" alt="">
      <h1>SMARTPHONES</h1>
      <h2>Les miniPhones</h2>
      <a href="">Découvrir la collection</a>
    </div>
    <div class="card2">
      <img src="/src/assets/news-image/card2.png" alt="">
      <h1>CUISINE</h1>
      <h2>L'ustensile indispensable</h2>
      <a href="">Découvrir la collection</a>
    </div>
    <div class="card3">
      <img src="/src/assets/news-image/card3.png" alt="">
      <h1>ORDINATEUR</h1>
      <h2>La puissance d'AMD</h2>
      <a href="">Découvrir la collection</a>
    </div>
  </section>
</Layout>

<style>
@font-face {
  font-family: 'Nobel';
  src: url(/public/font/Nobel/fonts/fonnts.com-Nobel_Light.otf);
}

#video {
  position: absolute;
  z-index: -2;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  object-fit: cover;
}

.video-veil {
  position: absolute;
  inset: 0;
  background: linear-gradient(0deg, rgba(255, 255, 255, 0.6), rgba(255, 255, 255, 0.126));
  z-index: -1;
  pointer-events: none;
}

#hero {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 20rem;
}

html {
  scroll-behavior: smooth;
}

#news {
  margin-top: 40rem;
  display: flex;
  gap: 0.2rem;
  flex-wrap: wrap;
  justify-content: center;
}
#news img {
  max-width: 100%;
  height: auto;
  width: 100%;
  max-width: 600px;
  object-fit: cover;
  display: block;
}

#news h1 {
  font-family: 'Nobel';
  font-size: 10px;
}

#news h2 {
  font-family: 'Nobel';
  font-size: 24px;
}

#news a {
  font-family: 'Nobel';
  font-size: 15px;
  text-decoration: none;
  color: black;
  border: 1px solid black;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 16px;
  padding-top: 16px;
}

</style>